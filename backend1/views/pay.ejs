<link rel="stylesheet" href="/css/pay.css">
<div class="Box">
<h2>Payment Details for <%= user1.name %></h2><br>
<button class="button" onclick="goBack()">Order More</button><br>

<script>
function goBack() {
  window.history.back();
}
</script>
<br>
    <div id="Order-details">
      <img src="/images/delivery.jpg">
        <h2>Total Amount To Pay = Rs. <%= cart[0].carttotal %></h2>
        <br>
        <br>
    </div>
    <button class="button" id="myBtn">PAY <%= cart[0].carttotal %>/-</button>
    </div>
    <div id="myModal" class="modal">

      <!-- Modal content -->
      <div class="modal-content">
        <div class="modal-header">
          <span class="close">&times;</span>
          <h2>YAY! Order Received</h2>
        </div>
        <div class="modal-body">
          <a href="/user1/cart/pay/ratinglist"><button class="button">Rate The Food</button></a>
          <form method="post" action="/user1/cart/pay/complete" id="complete">
            <input type="submit" value="ORDER COMPLETE">
        </form>
        </div>
      </div>
    
    </div>

  <script>
      var modal = document.getElementById("myModal");
      
      var btn = document.getElementById("myBtn");
      
      var span = document.getElementsByClassName("close")[0];
      
      btn.onclick = function() {
        modal.style.display = "block";
      }
      
      span.onclick = function() {
        modal.style.display = "none";
      }
      
      window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }
      </script>
    
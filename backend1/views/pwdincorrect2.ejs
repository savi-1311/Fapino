<link rel="stylesheet" type="text/css" href="/css/login.css">
<button><b>WELCOME Restaurant owner!</b></button>
<form method="post" action="/user2/login" id="login2">
    <div class="imgcontainer">
        <img src="/images/logon_img2.JPG" alt="Avatar" class="loginimg">
      </div>
      <div class = "heading">
        <h1><b>Welcome restaurant owner!!! <br> Wanna get you dishes featured? Login now!!!</b></h1>
        </div>
    <div class="container">
    
        <label><B>Email:</B>
            <input type="email" name="email" placeholder="Enter Email" required>
        </label><br>


        
        <label><B>Password:</B>
            <input type="Password" name="password" placeholder="Enter Password" required>
        </label><br>
        
        <button type="submit"><b>Login</b></button> 
    
    </div>
    <div class="container" style="background-color:#f1f1f1">
        <a href="/"><button type="button" class="cancelbtn">Cancel</button>
        </div>
</form>
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <p>Oops! Password Incorrect</p>
      <p>Please Login Again.</p>
    </div>
  
  </div>

  <script>
    // Get the modal
    var modal = document.getElementById("myModal");
    
    
    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];
    
    // When the user clicks the button, open the modal 
      modal.style.display = "block";
    
    // When the user clicks on <span> (x), close the modal
    span.onclick = function() {
      modal.style.display = "none";
    }
    
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
    </script>